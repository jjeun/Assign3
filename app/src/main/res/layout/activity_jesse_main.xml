<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:background="#ffffff">

    <!--
    Tag for header text of the Main page
    contains code for layout, text color, text size, etc.
    -->
    <TextView android:text="@string/headerText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/headerText"
        android:gravity="center"
        android:elegantTextHeight="false"
        android:textSize="25sp"
        android:textColor="#3a9cff"
        android:typeface="normal"
        android:textStyle="bold"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <!--
     Tag for Darpan Button of the Main page
     Links to Darpan Page thru listener in the JesseMain.java
     contains code for layout, text color, text size, etc.
     -->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/darpanButton"
        android:id="@+id/darpanButton"
        android:layout_above="@+id/maxButton"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="27dp"
        android:textAlignment="center"
        android:textStyle="bold|italic"
        android:textSize="15sp"
        android:textColor="#000000"
        android:background="#3a9cff"
        android:padding="10sp" />

    <!--
   Tag for Max Button of the Main page
   Links to Max Page thru listener in the JesseMain.java
   contains code for layout, text color, text size, etc.
   -->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/maxButton"
        android:id="@+id/maxButton"
        android:layout_marginBottom="34dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:textStyle="bold|italic"
        android:typeface="normal"
        android:textSize="15sp"
        android:textColor="#000000"
        android:background="#3a9cff"
        android:padding="10sp" />

    <!--
   Tag for Drake Universtiy Logo image on the Main page
   Links to drakelogo2.jpg in drawable folder
   contains code for layout, text color, text size, etc.
   -->
   <ImageView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:src="@drawable/drakelogo2"
       android:layout_alignParentRight="true"
       android:layout_alignParentEnd="true"
       android:layout_above="@+id/headerText"
       android:layout_alignParentTop="true" />

</RelativeLayout>
